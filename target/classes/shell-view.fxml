<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.ShellController"
    style="-fx-background-color: #0d1117;">

    <!-- Title Bar -->
    <HBox AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
        style="-fx-background-color: #21262d; -fx-padding: 12 20; -fx-border-color: #30363d; -fx-border-width: 0 0 1 0;">
        <Label text="Skyport Terminal"
            style="-fx-text-fill: #f0f6fc; -fx-font-size: 16px; -fx-font-weight: 600;" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Main Terminal Area -->
    <VBox spacing="0" AnchorPane.topAnchor="45.0" AnchorPane.bottomAnchor="0.0"
        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <!-- Output Area -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS"
            style="-fx-background-color: #0d1117; -fx-control-inner-background: #0d1117;">
            <TextArea fx:id="outputArea" editable="false" wrapText="true"
                style="-fx-background-color: #0d1117; 
                       -fx-control-inner-background: #0d1117;
                       -fx-text-fill: #00d563;
                       -fx-font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', monospace;
                       -fx-font-size: 14px;
                       -fx-padding: 20;
                       -fx-border-color: transparent;
                       -fx-focus-color: transparent;
                       -fx-faint-focus-color: transparent;" />
        </ScrollPane>

        <!-- Command Input Area -->
        <HBox alignment="CENTER_LEFT" spacing="12"
            style="-fx-background-color: #161b22; -fx-padding: 16 20; -fx-border-color: #30363d; -fx-border-width: 1 0 0 0;">

            <!-- Status Indicator -->
            <HBox alignment="CENTER" spacing="8">
                <Label fx:id="statusIndicator" text="●"
                    style="-fx-text-fill: #238636; -fx-font-size: 14px;" />
                <Label fx:id="userLabel" text="user@terminal"
                    style="-fx-text-fill: #7c3aed; -fx-font-size: 13px; -fx-font-weight: 500; -fx-background-color: #1f1326; -fx-padding: 4 8; -fx-background-radius: 4;" />
            </HBox>

            <!-- Prompt Symbol -->
            <Label text="$"
                style="-fx-text-fill: #58a6ff; -fx-font-size: 18px; -fx-font-weight: bold; -fx-font-family: monospace;" />

            <!-- Command Input -->
            <TextField fx:id="commandField" onAction="#executeCommand"
                HBox.hgrow="ALWAYS"
                promptText="Enter command..."
                style="-fx-background-color: #21262d;
                       -fx-text-fill: #f0f6fc;
                       -fx-prompt-text-fill: #8b949e;
                       -fx-font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', 'Monaco', monospace;
                       -fx-font-size: 14px;
                       -fx-padding: 10 16;
                       -fx-background-radius: 6;
                       -fx-border-color: #30363d;
                       -fx-border-width: 1;
                       -fx-border-radius: 6;
                       -fx-focus-color: #1f6feb;
                       -fx-faint-focus-color: transparent;" />

            <!-- Execute Button -->
            <Button text="Run" onAction="#executeCommand"
                style="-fx-background-color: #238636;
                       -fx-text-fill: #ffffff;
                       -fx-font-weight: 600;
                       -fx-font-size: 13px;
                       -fx-padding: 10 20;
                       -fx-background-radius: 6;
                       -fx-border-radius: 6;
                       -fx-cursor: hand;" />
        </HBox>
    </VBox>
</AnchorPane>