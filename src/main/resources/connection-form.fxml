<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f8fafc;"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.ConnectionFormController">

    <center>
        <VBox alignment="CENTER" prefHeight="360" prefWidth="340" spacing="18"
            style="-fx-padding: 28; -fx-background-color: #fff; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #222;"
                text="Skyport Client" />

            <!-- Import .skp config -->
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label style="-fx-font-size: 11px; -fx-text-fill: #555;" text="Import config:" />
                <Button fx:id="browseSKPButton" onAction="#browseSKPFile" prefHeight="28"
                    prefWidth="110"
                    style="-fx-background-color: #4f46e5; -fx-text-fill: white; -fx-background-radius: 4; -fx-font-size: 11px; -fx-font-weight: 500; -fx-cursor: hand;"
                    text="Browse file .skp">
                    <tooltip>
                        <Tooltip text="Browse file .skp" />
                    </tooltip>
                </Button>
                <Label fx:id="skpFileNameLabel" text="" style="-fx-font-size: 11px; -fx-text-fill: #10b981;" />
            </HBox>

            <!-- Auth -->
            <TextField fx:id="usernameField" promptText="Username"
                style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-padding: 0 10; -fx-font-size: 12px;" />

            <PasswordField fx:id="passwordField" promptText="Password"
                style="-fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 4; -fx-padding: 0 10; -fx-font-size: 12px;" />

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="testConnectionButton" onAction="#testConnection" prefHeight="30"
                    prefWidth="70"
                    style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-background-radius: 4;                            -fx-font-size: 12px; -fx-font-weight: 500; -fx-cursor: hand;"
                    text="Test" />

                <Button fx:id="connectButton" onAction="#connect" prefHeight="30" prefWidth="90"
                    style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 4;                            -fx-font-size: 12px; -fx-font-weight: 600; -fx-cursor: hand;"
                    text="Connect" />

                <Button fx:id="cancelButton" onAction="#cancel" prefHeight="30" prefWidth="60"
                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 4;                            -fx-font-size: 12px; -fx-font-weight: 500; -fx-cursor: hand;"
                    text="Cancel" />
            </HBox>

            <!-- Loading -->
            <StackPane>
                <ProgressIndicator fx:id="loadingSpinner" prefHeight="22" prefWidth="22"
                    style="-fx-progress-color: #4f46e5;" visible="false" />
            </StackPane>
        </VBox>
    </center>
</BorderPane>