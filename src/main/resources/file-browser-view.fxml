<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.FileBrowserController"
    style="-fx-background-color: #f8f9fa;">

    <!-- Header -->
    <top>
        <VBox
            style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20 30;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="☁" style="-fx-font-size: 28px; -fx-text-fill: white;" />
                <VBox>
                    <Label text="Skyport Client"
                        style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label text="SFTP File Manager"
                        style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.8);" />
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Logout" onAction="#logout"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand;" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="0" style="-fx-padding: 0;">

            <!-- Toolbar -->
            <HBox alignment="CENTER_LEFT" spacing="12"
                style="-fx-background-color: white; -fx-padding: 15 30; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
                <Button text="↑ Up" onAction="#goUp"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Button text="🔄 Refresh" onAction="#refresh"
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Separator orientation="VERTICAL" style="-fx-padding: 0 5;" />

                <Button text="📤 Upload" onAction="#upload"
                    style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Button text="📥 Download" onAction="#download"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Button text="🗑 Delete" onAction="#delete"
                    style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Button text="🖥 Open Shell" onAction="#openShell"
                    style="-fx-background-color: #ffc107; -fx-text-fill: #343a40; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Button text="New Folder" onAction="#mkdir"
                    style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 16; -fx-cursor: hand; -fx-font-weight: bold;" />

                <Region HBox.hgrow="ALWAYS" />

                <!-- Search Box -->
                <TextField promptText="🔍 Search files..."
                    style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-pref-width: 200;" />
            </HBox>

            <!-- File List Container -->
            <VBox style="-fx-background-color: white; -fx-padding: 30;" VBox.vgrow="ALWAYS">

                <!-- Breadcrumb/Path -->
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 0 0 15 0;">
                    <Label text="📁 Current Path:"
                        style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
                    <Label fx:id="pathLabel"
                        style="-fx-text-fill: #6c757d; -fx-background-color: #f8f9fa; -fx-padding: 4 8; -fx-border-radius: 4; -fx-background-radius: 4;" />
                </HBox>

                <!-- File List -->
                <ListView fx:id="fileListView"
                    style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10;"
                    VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                </ListView>

                <!-- File Info Panel -->
                <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 0 0 0;">
                    <VBox spacing="5">
                        <Label text="File Information"
                            style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
                        <Label fx:id="fileInfoLabel"
                            style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" />
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <VBox alignment="CENTER_RIGHT" spacing="2">
                        <Label text="Connection Status"
                            style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 11px;" />
                        <HBox alignment="CENTER_RIGHT" spacing="5">
                            <Label text="●" style="-fx-text-fill: #28a745; -fx-font-size: 14px;" />
                            <Label text="Connected"
                                style="-fx-text-fill: #28a745; -fx-font-size: 12px; -fx-font-weight: bold;" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15"
            style="-fx-background-color: #343a40; -fx-padding: 10 30;">
            <Label fx:id="statusLabel" text="Ready"
                style="-fx-text-fill: #adb5bd; -fx-font-size: 12px;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Skyport Client v1.0" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;" />
        </HBox>
    </bottom>

</BorderPane>