<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.FileBrowserController"
    style="-fx-background-color: #f5f5f5;">

    <!-- Header -->
    <top>
        <VBox>
            <!-- <HBox alignment="CENTER" style="-fx-padding: 18 0 0 0;">
                <ImageView fitHeight="44" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@icon.png" />
                    </image>
                </ImageView>
            </HBox> -->
            <HBox alignment="CENTER_LEFT" spacing="20"
                style="-fx-padding: 15; -fx-background-color: #e9ecef;">
                <ImageView fitHeight="32" preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@icon.png" />
                    </image>
                </ImageView>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="serverInfoLabel" text="user@host:port"
                    style="-fx-font-family: Consolas;" />
                <Button text="Logout" onAction="#logout" />
            </HBox>

            <!-- Toolbar -->
            <HBox spacing="8" style="-fx-padding: 10; -fx-background-color: white;">
                <Button text="ðŸ  Home" onAction="#goHome" />
                <Button text="â† Back" onAction="#goBack" />
                <Button text="ðŸ”„ Refresh" onAction="#refresh" />
                <Button text="ðŸ“ New Folder" onAction="#mkdir" />
                <Button text="ðŸ“¤ Upload" onAction="#upload" />
                <Button text="ðŸ“¥ Download" onAction="#download" />
                <Button text="ðŸ—‘ Delete" onAction="#delete" />
                <Button text="ðŸ’» Terminal" onAction="#openShell" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField promptText="ðŸ” Search..." fx:id="searchField" prefWidth="200" />
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 15;">

            <!-- Path Breadcrumb -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ“‚" style="-fx-font-size: 16px;" />
                <Label text="Current Path:" style="-fx-font-weight: bold;" />
                <Label fx:id="pathLabel" text="/home/user"
                    style="-fx-background-color: #e9ecef; -fx-padding: 5 10; -fx-font-family: Consolas;" />
            </HBox>

            <!-- File List -->
            <ListView fx:id="fileListView" VBox.vgrow="ALWAYS"
                style="-fx-background-color: white; -fx-border-color: #ddd;"
                prefWidth="400" />

            <!-- Selection Details -->
            <VBox spacing="4"
                style="-fx-background-color: white; -fx-border-color: #ddd; -fx-padding: 10 15 10 15;">
                <Label text="Selection Details" style="-fx-font-weight: bold;" />
                <Label fx:id="fileInfoLabel" text="No file selected" wrapText="true"
                    style="-fx-font-family: Consolas;" />
                <Label fx:id="statusLabel" text="" />
            </VBox>

            <!-- Progress Bar -->
            <ProgressBar fx:id="progressBar" prefWidth="300" progress="0" visible="false" />
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15"
            style="-fx-background-color: #e9ecef; -fx-padding: 10;">
            <Label text="Skyport Client Â© 2025" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
        </HBox>
    </bottom>

</BorderPane>